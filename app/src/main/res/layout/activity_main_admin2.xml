<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".admin.MainActivityAdmin">

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:fontFamily="sans-serif-condensed"
        android:text="Администратор"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/users"
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:layout_marginTop="80dp"
        android:background="@drawable/drawable_corners"
        android:drawableLeft="@drawable/user"
        android:fontFamily="sans-serif-condensed"
        android:textSize="18dp"
        android:gravity="center_vertical"
        android:outlineAmbientShadowColor="@color/lightBlueLogo"
        android:outlineSpotShadowColor="@color/lightBlueLogo"
        android:paddingLeft="5dp"
        android:shadowColor="@color/lightBlueLogo"
        android:text="Пользователи"
        android:drawablePadding="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView12" />

    <TextView
        android:id="@+id/food"
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:layout_marginTop="16dp"
        android:textSize="18dp"
        android:background="@drawable/drawable_corners"
        android:drawableLeft="@drawable/ic_res"
        android:drawablePadding="10dp"
        android:fontFamily="sans-serif-condensed"
        android:gravity="center_vertical"
        android:outlineAmbientShadowColor="@color/lightBlueLogo"
        android:outlineSpotShadowColor="@color/lightBlueLogo"
        android:paddingLeft="5dp"
        android:shadowColor="@color/lightBlueLogo"
        android:text="Меню"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/admins" />

    <TextView
        android:id="@+id/admins"
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:layout_marginTop="16dp"
        android:textSize="18dp"
        android:background="@drawable/drawable_corners"
        android:drawableLeft="@drawable/lock"
        android:fontFamily="sans-serif-condensed"
        android:gravity="center_vertical"
        android:drawablePadding="10dp"
        android:outlineAmbientShadowColor="@color/lightBlueLogo"
        android:outlineSpotShadowColor="@color/lightBlueLogo"
        android:paddingLeft="5dp"
        android:shadowColor="@color/lightBlueLogo"
        android:text="Администраторы"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/users" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/exit"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="70dp"
        android:background="@drawable/blue_btn"
        android:fontFamily="sans-serif-condensed"
        android:outlineAmbientShadowColor="@color/lightBlueLogo"
        android:outlineSpotShadowColor="@color/lightBlueLogo"
        android:shadowColor="@color/lightBlueLogo"
        android:text="Выход"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>